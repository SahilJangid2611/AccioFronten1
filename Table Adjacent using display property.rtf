<!DOCTYPE html>
<html>
  <head>
    <title>Hello, World!</title>
    <link rel="stylesheet" href="styles.css" />
    <style>
      .table-wrapper{
        display: table;
        width:100%;
        table-layout: fixed;
        border-collapse:separate;
        border-spacing: 10px;
      }
      
      .table-row{
        display: table-row;
      }
      
      .table-cell{
        display: table-cell;
        vertical-align: top;
        border:1px solid black;
        padding:10px;
        width:50%;
      }
    </style>
  </head>
  <body>
    <div class="table-wrapper">
      <div class="table-row">
        <div class="table-cell">
          <div class="table">
            <div class="table-row">
              <div class="table-cell">Header 1</div>
              <div class="table-cell">Header 2</div>
              <div class="table-cell">Header 3</div>
            </div>
            
            <div class="table-row">
              <div class="table-cell">Row 1</div>
              <div class="table-cell">Row 1</div>
              <div class="table-cell">Row 1</div>
            </div>
            
            <div class="table-row">
              <div class="table-cell">Row 2</div>
              <div class="table-cell">Row 2</div>
              <div class="table-cell">Row 2</div>
            </div>
          </div>
        </div>
        <div class="table-cell">
          <div class="table">
            <div class="table-row">
              <div class="table-cell">Header A</div>
              <div class="table-cell">Header B</div>
              <div class="table-cell">Header C</div>
            </div>
            
            <div class="table-row">
              <div class="table-cell">Row A Cell 1</div>
              <div class="table-cell">Row A Cell 2</div>
              <div class="table-cell">Row A Cell 3</div>
            </div>
            
            <div class="table-row">
              <div class="table-cell">Row B Cell 1</div>
              <div class="table-cell">Row B Cell 2</div>
              <div class="table-cell">Row B Cell 3</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>